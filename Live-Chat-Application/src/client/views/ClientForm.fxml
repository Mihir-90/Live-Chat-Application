<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" stylesheets="@../resources/css/Styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.ClientFormController">
    <children>
        <HBox fx:id="menuBar" minHeight="41.0" minWidth="900.0" prefHeight="41.0" prefWidth="900.0" styleClass="themeColor">
            <children>
                <ImageView fx:id="logo" fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets bottom="3.0" left="3.0" top="3.0" />
                    </HBox.margin></ImageView>
                <Label fx:id="nameLabel" style="-fx-background-color: transparent;" styleClass="themeLabel" text="Name" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" top="7.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <SplitPane fx:id="splitPane" focusTraversable="true" VBox.vgrow="ALWAYS">
            <items>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                        <HBox minWidth="24.0" prefHeight="55.0" prefWidth="695.0">
                            <children>
                                <JFXTextField fx:id="textField" focusColor="WHITE" focusTraversable="false" prefHeight="70.0" prefWidth="438.0" promptText="Type a message" unFocusColor="BLACK" HBox.hgrow="ALWAYS">
                                    <styleClass>
                                        <String fx:value="themeColor" />
                                        <String fx:value="themeLabel" />
                                    </styleClass>
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                    <padding>
                                        <Insets left="15.0" right="15.0" />
                                    </padding>
                                </JFXTextField>
                                <ImageView fx:id="imageSelect" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgChooseOnAction" pickOnBounds="true" preserveRatio="true">
                                    <HBox.margin>
                                        <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
                                    </HBox.margin>
                                </ImageView>
                                <JFXButton fx:id="buttonSend" buttonType="RAISED" onAction="#pressedSend" prefHeight="50.0" prefWidth="130.0" ripplerFill="#2c2b2b" styleClass="themeColor" text="Send" textFill="#2a3942">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets bottom="7.0" right="10.0" top="7.0" />
                                    </HBox.margin>
                                </JFXButton>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label maxHeight="1.7976931348623157E308" text="Connected" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3" />
                    </font>
                    <textFill>
                        <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
                    </textFill>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
</VBox>
